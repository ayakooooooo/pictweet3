<%#ツイート投稿すべてを表示するためのビュー%>
<div class="contents row">
  <% @tweets.each do |tweet| %>
  <%#eachメソッドを使い、すべてのツイートを表示%>
    <div class="content_post" style="background-image: url(<%= tweet.image %>);">
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '詳細', tweet_path(tweet.id) %>
          </li>
          <li>
            <%= link_to '編集', edit_tweet_path(tweet.id) %>
          </li>
          <li>
            <%= link_to '削除',tweet_path(tweet.id), data: { turbo_method: :delete } %>
          </li>
        </ul>
      </div>
      <p><%= tweet.text %></p>
      <span class="name">
        <a href="/users/<%= tweet.user.id %>">
          <span>投稿者</span><%= tweet.user.nickname %>
          <%#アソシエーションを定義しているので、Tweetモデルのインスタンスが入った変数.userと記述すると、インスタンスが属しているUserモデルのインスタンスを取得できる%>
        </a>
      </span>
    </div>
  <% end %>
</div>
